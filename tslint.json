{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "curly": [
      true,
      "ignore-same-line"
    ],
    "no-unused-expression": false,
    "no-string-literal": false,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "always"
    ]
  }
}