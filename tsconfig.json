{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./build/",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "rootDir": "src",
    "experimentalDecorators": true,
    "lib": ["es2017", "es2018", "dom", "esnext.asynciterable"],
    "baseUrl": "./",
    "paths": {
      "Utils/*": ["src/utils/*"],
      "Stores/*": ["src/stores/*"],
      "Models/*": ["src/models/*"],
      "Components/*": ["src/components/*"],
      "Pages/*": ["src/components/pages/*"],
      "Common/*": ["src/components/common/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "webpack.config.js"]
}
